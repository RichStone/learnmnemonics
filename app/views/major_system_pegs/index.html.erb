<div class="w-full relative">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="text-center">
    <h1 class="font-bold text-4xl">Mnemonic Major System Pegs</h1>
  </div>

  <div id="major_system_pegs">
    <%= render @major_system_pegs %>
  </div>

  <%= link_to 'New Peg', new_major_system_peg_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium fixed bottom-14 right-14" %>
</div>
