<div class="w-full relative">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="text-center">
    <h1 class="font-bold text-4xl">Mnemonic Pegs</h1>
  </div>

  <div id="quick-links" class="grid grid-cols-10 gap-1 text-center mt-28">
    <% @pegs.each do |peg| %>
      <%= link_to peg.number, peg_path(peg), class: "text-blue-600 underline" %>
    <% end %>
  </div>

  <div id="pegs">
    <%= render @pegs %>
  </div>

  <%= link_to 'New Peg', new_peg_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium fixed bottom-14 right-14" %>
</div>
